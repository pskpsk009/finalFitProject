generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "windows", "linux", "linux-musl"]
}


datasource db {
  // Switched to PostgreSQL for production deployments. Set the DATABASE_URL
  // environment variable (e.g. postgresql://USER:PASSWORD@HOST:PORT/DATABASE).
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  username String   @unique
  password String
  weight   Float
  height   Float
  logs     Log[]
}

model Log {
  id        Int      @id @default(autoincrement())
  userId    Int
  type      String
  value     String
  timestamp DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}
